<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Profile | User Management</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #e9ecef;
      }
    </style>
  </head>
  <body class="bg-light">
    <nav class="navbar navbar-dark bg-dark mb-4">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">User Management System</a>
        <div class="d-flex align-items-center">
          <% if (account && account.avatar) { %>
          <img
            src="<%= account.avatar %>"
            alt="avatar"
            class="me-3 avatar"
            style="
              width: 40px;
              height: 40px;
              object-fit: cover;
              border-radius: 50%;
            "
          />
          <% } %>
          <span class="text-white me-3"
            ><%= account ? account.username : 'User' %> (<%= account ?
            account.role : '' %>)</span
          >
          <a class="btn btn-outline-light btn-sm" href="/logout">Logout</a>
        </div>
      </div>
    </nav>

    <div class="container">
      <div class="row g-4">
        <div class="col-md-4">
          <div class="card p-4 text-center">
            <h5>Your Avatar</h5>
            <div class="my-3">
              <% if (account && account.avatar && account.avatar.trim() !== "")
              { %>
              <img src="<%= account.avatar %>" alt="avatar" class="avatar" />
              <% } else { %>
              <div
                class="avatar d-flex align-items-center justify-content-center bg-secondary text-white"
              >
                <strong
                  ><%= account && account.username ?
                  account.username[0].toUpperCase() : 'U' %></strong
                >
              </div>
              <% } %>
            </div>

            <form
              action="/profile/avatar"
              method="post"
              enctype="multipart/form-data"
            >
              <input type="file" name="avatar" accept="image/*" />
              <button class="btn btn-primary btn-sm" type="submit">
                Upload Avatar
              </button>
            </form>

            <form action="/profile/remove-avatar" method="post" class="mt-2">
              <button class="btn btn-outline-danger w-100" type="submit">
                Remove Avatar
              </button>
            </form>
          </div>
        </div>

        <div class="col-md-8">
          <div class="card p-4">
            <h5>Edit Bio / Message</h5>
            <% if (flash) { %>
            <div class="alert alert-<%= flash.type %>"><%= flash.msg %></div>
            <% } %>

            <form
              action="/update-profile"
              method="post"
              enctype="multipart/form-data"
              class="mt-3"
            >
              <input type="file" name="avatar" accept="image/*" />
              <textarea name="bio" class="form-control" rows="4">
<%= account && account.bio ? account.bio : '' %></textarea
              >
              <button class="btn btn-success mt-2" type="submit">Save</button>
            </form>

            <hr />

            <h6 class="mt-3">Account Info</h6>
            <ul class="list-unstyled">
              <li><strong>Username:</strong> <%= account.username %></li>
              <li><strong>Email:</strong> <%= account.email %></li>
              <li><strong>Role:</strong> <%= account.role %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
